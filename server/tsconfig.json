{

  "compilerOptions": {
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "target": "ES2022",
    "esModuleInterop": true,
    "verbatimModuleSyntax": false,
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}
